<div section-id="{{ sectionId }}"
     class="instagram-section pt-11 {% if settings.only == 'mobile' %} block lg:hidden {% elseif settings.only == 'desktop' %} hidden lg:block{% endif %}">
    {% embed 'container.common.twig' with {'class': 'w-full', 'title': settings.title, 'link': settings.instagram, 'id': sectionId, 'props': settings} %}
        {% block content %}
          {% if title %}
            <h3 class="text-center text-xl text-black font-black mb-[26px]">{{ title }}</h3>
          {% endif %}
            <div class="w-full grid grid-cols-2 lg:grid-cols-3 gap-[6px] items-center justify-center">
              {% for post in props.posts_list %}
                <div class="h-full w-full last:hidden lg:last:block">
                    <a href="{{ post.link }}" class="hover:opacity-80 transition duration-300" target="_blank" rel="nofollow noopener">
                        <img class="object-cover w-full aspect-square" src="{{ imageUrl(post.image) }}" alt="">
                    </a>
                </div>
              {% endfor %}
            </div>

            {% if link %}
            <div class="flex items-center justify-center mt-[11px]">
                <a href="{{ link }}" class="text-white hover:bg-[#359dff] transition rounded text-[13px] px-[14px] py-[7px] flex items-center justify-center bg-[rgb(64,139,209)]" target="_blank" rel="nofollow noopener">
                    <svg class="w-[1em] h-[1em] me-[7px]" aria-hidden="true" data-fa-processed="" aria-label="Instagram" data-prefix="fab" data-icon="instagram" role="img" viewBox="0 0 448 512">
                        <path fill="currentColor" d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"></path>
                    </svg>
                    <span class="leading-[1.5em]">{{ props.label ?? locals.instagram_follow }}</span>
                </a>
            </div>
            {% endif %}
        {% endblock %}
    {% endembed %}
</div>

{% schema %}
{
"name": {
    "ar": "منشورات انستجرام",
    "en": "Instagram Posts"
  },
  "icon": "fal fa-camera",
  "display": true,
  "settings": {
    "title": {
        "type": "text",
        "label": {
            "ar": "العنوان",
            "en": "Title"
        }
    },       
    "instagram": {
        "type": "text",
        "label": {
            "ar": "رابط الحساب",
            "en": "Instagram Account URL"
        }
    },
    "label": {
        "type": "text",
        "label": {
            "ar": "عنوان الزر",
            "en": "Button Label"
        }
    },
    "only": {
        "type": "radios",
        "label": {
            "ar": "عرض فقط على:",
            "en": "Show only on:"
        },
        "options": [
            {
                "value": "all",
                "label": {
                "ar": "جميع الاجهزة",
                "en": "all pages"
                }
            },
            {
                "value": "mobile",
                "label": {
                "ar": "الجوال فقط",
                "en": "Mobile only"
                }
            },
            {
                "value": "desktop",
                "label": {
                "ar": "اجهزة الكمبيوتر فقط",
                "en": "Desktop only"
                }
            }
        ]
    },
    "posts": {
        "type": "fieldset",
        "label": {
            "ar": "المنشورات",
            "en": "Posts"
        },
        "icon": "font_awesome",
        "expandable": true,
        "settings": {
            "list": {
                "type": "list",
                "settings_label": {
                    "ar": "منشور",
                    "en": "Post"
                },
                "noLabel": true,
                "settings": {
                    "link": {
                        "type": "url",
                        "label": {
                            "ar": "الرابط",
                            "en": "link"
                        }
                    },
                    "image": {
                        "type": "image",
                        "label": {
                            "ar": "الصورة",
                            "en": "Image"
                        }
                    }
                }
            }
        }
    }
  }
}
{% endschema %}