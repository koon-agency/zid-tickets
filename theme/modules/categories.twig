<div section-id="{{ sectionId }}"
     class="categories-section {% if settings.only == 'mobile' %} block lg:hidden {% elseif settings.only == 'desktop' %} hidden lg:block{% endif %}">
    {% embed 'container.common.twig' with {'class': 'w-full', 'title': settings.title, 'id': sectionId, 'categories': settings.categories} %}
        {% block content %}
          {% if title %}
            <h3 class="text-center text-xl text-black font-bold">{{ title }}</h3>
          {% endif %}
            <div class="w-full grid grid-cols-2 lg:grid-cols-3 gap-x-[30px] gap-y-6 items-center justify-center">
              {% for key, category in categories %}
                <div class="h-full w-full">
                    <a href="/categories/{{ category.category.id }}/{{ category.category.slug }}" >
                        <img class="object-contain w-full" style="background: #E0E0E0"
                        {% if category.image %} 
                              src="{{ imageUrl(category.image) }}"
                          {% elseif category.category.image %}
                              src="{{ imageUrl(category.category.image) }}"
                          {% else %}
                              src="{{ imageUrl(asset_url ~ 'product-img.svg') }}"
                          {% endif %}
                          alt="">
                          <p class="text-[1.2rem] font-bold text-center text-black pt-[10px] uppercase">
                          {{ category.title }}
                          </p>
                    </a>
                  </div>
              {% endfor %}
            </div>
        {% endblock %}
    {% endembed %}
</div>


