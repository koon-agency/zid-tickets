<div section-id="{{ sectionId }}"
    class="hero-paragraphs-section {% if settings.spaces %} py-12 {% else %} lg:py-8{% endif %} {% if settings.only == 'mobile' %} block lg:hidden {% elseif settings.only == 'desktop' %} hidden lg:block{% endif %}">
    {% embed 'container.common.twig' with {'class': 'w-full', 'title': settings.title, 'desc': settings.desc, 'id': sectionId, 'button': settings.button, 'url': settings.url} %}
        {% block content %}
            {% if title %}
                <h3 class="text-start font-bold text-4xl lg:text-5xl text-black mb-3 lg:mb-6">{{ title }}</h3>
            {% endif %}
            {% if desc %}
                <p class="text-start font-bold text-base lg:text-lg text-[#737373] mb-3 lg:mb-6">{{ desc }}</p>
            {% endif %}
            {% if button and url %}
                <a href="{{ url }}" class="text-white bg-primary rounded-full px-6 lg:px-8 py-2 lg:py-3 font-bold text-lg lg:text-2xl">{{ button }}</a>
            {% endif %}
            
        {% endblock %}
    {% endembed %}
</div>

{% schema %}
{
    "name": {
    "ar": "قائمة محتوى",
    "en": "Hero paragraphs"
  },
  "icon": "fal fa-lines",
  "display": true,
  "settings": {
    "title": {
        "type": "text",
        "label": {
            "ar": "العنوان",
            "en": "Title"
        }
    },
    "desc": {
        "type": "textarea",
        "label": {
        "ar": "الوصف",
        "en": "Description"
      }
    },
    "button": {
        "type": "text",
        "label": {
        "ar": "عنوان الزر",
        "en": "Button text"
      }
    },
    "url": {
        "type": "text",
        "label": {
        "ar": "رابط الزر",
        "en": "Button text"
      }
    },
    "spaces": {
      "type": "checkbox",
      "label": {
          "ar": "",
          "en": ""
      },
      "option": {
        "ar": "ترك مسافة أعلى وأسفل القسم؟",
        "en": "Add vertical spaces?"
      },
      "default": true,
      "noLabel": true
    },
    "only": {
        "type": "radios",
        "label": {
            "ar": "عرض فقط على:",
            "en": "Show only on:"
        },
        "options": [
            {
                "value": "all",
                "label": {
                "ar": "جميع الاجهزة",
                "en": "all pages"
                }
            },
            {
                "value": "mobile",
                "label": {
                "ar": "الجوال فقط",
                "en": "Mobile only"
                }
            },
            {
                "value": "desktop",
                "label": {
                "ar": "اجهزة الكمبيوتر فقط",
                "en": "Desktop only"
                }
            }
        ]
    }
  }
}
{% endschema %}